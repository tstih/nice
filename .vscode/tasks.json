{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "windows": {
                "type": "process",
                "command": "nmake",
                "args": [ "/f", "Makefile.nmake" ]
            },
            "dependsOn": [
                "clean"
            ]
        },
        {
            "label": "clean",
            "windows": {
                "type": "process",
                "command": "nmake",
                "args": [ "/f", "Makefile.nmake", "clean" ]
            }
        }
    ]
}